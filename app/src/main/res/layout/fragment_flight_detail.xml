<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="flight"
            type="com.example.tp3fickleflightgrupo3.ui.flightDetail.FlightDetailViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".ui.flightDetail.FlightDetailFragment">

        <ImageView
            android:id="@+id/flight_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/boracay"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/flight_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_image"
            android:layout_marginTop="8dp"
            android:text="@{flight.flightDetails.arrival_airport.name}"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/flight_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/flight_destination"
            android:layout_toEndOf="@id/flight_destination"
            android:layout_marginStart="8dp"
            android:padding="4dp"
            android:text="@{String.valueOf(flight.flightDetails.duration)}"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/flight_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_destination"
            android:text="@{flight.flightDetails.arrival_airport.id}"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/flight_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/flight_image"
            android:text="@string/_349"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/flight_overview_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_country"
            android:layout_marginTop="16dp"
            android:text="@string/overview"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/flight_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_overview_label"
            android:layout_marginTop="4dp"
            android:text="@{flight.flightDetails.airline}" />

        <TextView
            android:id="@+id/flight_photos_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_overview"
            android:layout_marginTop="16dp"
            android:text="@string/photos"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/flight_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_photos_label"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/boracay"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/boracay"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/boracay"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <Button
            android:id="@+id/book_now_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_photos"
            android:layout_marginTop="16dp"
            android:backgroundTint="#F99A0E"
            android:text="@string/book_now"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </RelativeLayout>
</layout>
