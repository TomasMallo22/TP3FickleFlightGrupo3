<!-- res/layout/item_flight.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:padding="16dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/airlineLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/airline_logo" />

        <TextView
            android:id="@+id/airlineName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Airline Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/flightDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration" />
    </LinearLayout>

    <TextView
        android:id="@+id/departureAirport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Departure Airport" />

    <TextView
        android:id="@+id/arrivalAirport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arrival Airport" />

    <TextView
        android:id="@+id/flightClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Class" />

    <TextView
        android:id="@+id/flightPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="View Details"
        android:textColor="@color/white"
        android:backgroundTint="@color/orange" />
</LinearLayout>
